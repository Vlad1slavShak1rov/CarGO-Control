        <TextBox Name = "ExpBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="0,34,0,0" PreviewTextInput="ExpBox_PreviewTextInput"/>
